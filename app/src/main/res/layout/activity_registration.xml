<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"

    android:paddingLeft="50dp"
    android:paddingBottom="50dp"
    android:paddingRight="50dp"
    android:paddingTop="50dp"
    tools:context=".UserProfile">

    <TextView
        android:id="@+id/RegisterTextView1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:paddingLeft="40dp"

        android:text="Companio"
        android:transitionName="logo_text"
        android:textColor="#1D2951"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/RegistertextView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_bold"
        android:paddingTop="30dp"
        android:paddingLeft="50dp"
        android:paddingBottom="20dp"
        android:transitionName="logo_text"
        android:text="Register"
        android:textAlignment="center"

        android:textColor="#1D2951"
        android:textSize="30sp" />
    <Button
        android:paddingTop="17dp"

        android:paddingLeft="16dp"
        android:id="@+id/btnContinueWithGoogle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Continue with Google"
        android:textSize="20sp"

        android:textAlignment="center"
        android:backgroundTint="#C5C6D0"
        android:textColor="#1D2951"
        android:gravity="center_horizontal"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR "
        android:textAlignment="center"
        android:fontFamily="@font/archivo_bold"
        android:paddingTop="10dp"
        android:paddingLeft="0dp"
        android:paddingBottom="5dp"
        android:textColor="#1D2951"
        android:textSize="20sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username"
        style="@style/OutlinedBoxRounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mobilenumber"
        style="@style/OutlinedBoxRounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email"
        android:inputType="textEmailAddress"
        app:passwordToggleEnabled="true"
        />
     <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"

         app:passwordToggleEnabled="true"
         style="@style/OutlinedBoxRounded"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"

        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/repeatpassword"
        app:passwordToggleEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="repeat password"
        android:inputType="textPassword"

        />




    <!-- Continu200dpe with Google Button -->


    <Button
        android:paddingTop="10dp"


        android:paddingLeft="16dp"
        android:id="@+id/signUpbtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Sign up"
        android:textSize="20sp"

        android:textAlignment="center"
        android:backgroundTint="#1D2951"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"
        android:layout_marginStart="8dp"/>

    <Button
    android:id="@+id/newUserSignUp"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:backgroundTint="#FFFFFF"
    android:text="Already have an account? login"
    android:textColor="#1D2951"
    android:textAlignment="center"
    android:elevation="0dp"



    />


</LinearLayout>

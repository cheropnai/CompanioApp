<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"

    android:paddingLeft="50dp"
    android:paddingBottom="50dp"
    android:paddingRight="50dp"
    android:paddingTop="50dp"
    tools:context=".UserProfile">

    <TextView
        android:id="@+id/loginTextView1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:paddingLeft="0dp"
        android:textAlignment="center"
        android:text="Companio"
        android:transitionName="logo_text"
        android:textColor="#1D2951"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/logintextView2"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_bold"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:paddingBottom="20dp"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#1D2951"

        android:textSize="30sp"
        android:transitionName="logo_text" />
    <Button
        android:paddingTop="17dp"

        android:paddingLeft="16dp"
        android:id="@+id/btnContinueWithGoogle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Continue with Google"
        android:textSize="20sp"

        android:textAlignment="center"
        android:backgroundTint="#C5C6D0"
        android:textColor="#1D2951"
        android:gravity="center_horizontal"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/OrtextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR "
        android:textAlignment="center"
        android:fontFamily="@font/archivo_bold"
        android:paddingTop="10dp"
        android:paddingLeft="0dp"
        android:paddingBottom="15dp"
        android:textColor="#1D2951"
        android:textSize="20sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        style="@style/OutlinedBoxRounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        style="@style/OutlinedBoxRounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"

       >

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"

        />


<Button
    android:id="@+id/forgot_password"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:backgroundTint="#FFFFFF"
    android:text="forgot password?"
    android:textColor="#1D2951"

    android:layout_gravity="end"
    android:elevation="0dp"



    />

    <!-- Continu200dpe with Google Button -->


    <Button
        android:id="@+id/login_btn"


        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#1D2951"
        android:gravity="center_horizontal"
        android:paddingLeft="16dp"

        android:paddingTop="10dp"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
    <Button
        android:id="@+id/newUserSignUp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:text="new user? sign up"
        android:textColor="#1D2951"
        android:textAlignment="center"
        android:elevation="0dp"



        />



</LinearLayout>
